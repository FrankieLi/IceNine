import os


with open( 'CopyrightTextC++.txt', 'r' ) as CopyRightFile:
    CopyRightText = CopyRightFile.read()

CopyRightFile.close()



for f in os.listdir('.'):
    if os.path.isfile( f ):
        print f + ' ' + f.find('.cpp')
        if (  (f.find('.c') > 0 )  ) :
            with open( f, 'r') as CurrentFile:
                SrcText = CurrentFile.read()
            CurrentFile.close()
            with open( f, 'w') as CurrentFile:
                CurrentFile.write( CopyRightText )
                CurrentFile.write( SrcText )
            CurrentFile.close()
